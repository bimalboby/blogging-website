<h1><center><i>EDIT Comments</i></center></h1>
<form method="POST"  action="/admin/update-comments/{{blogs._id}}"> 
  
  {{#each blogs.comments}}
  <div class="form-group"></div>
    <label for="exampleInputPassword1">Email</label>
    <input type="text" class="form-control" id="myInput"readonly aria-describedby="emailHelp" value="{{this.email}}" name="email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Message</label>
    <input type="text" class="form-control" id="exampleInputPassword1" value="{{this.message}}" name="message">
  </div>
  <p><b>_______________________________________________________________________________________________________________________________________</b></p>
  {{/each}}

  <button type="submit" class="btn btn-primary">Submit</button>
</form>